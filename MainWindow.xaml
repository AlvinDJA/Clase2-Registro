<Window x:Class="Clase2_Registro.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Clase2_Registro" mc:Ignorable="d" Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <!--ActorId-->
            <StackPanel Orientation="Horizontal">
            <Label Content="ActorId"/>
            <TextBox x:Name="ActorIdTextBox" Width="100" Text="{Binding AcotrId}"/>
            <Button x:Name="BuscarButton" Content="Buscar" Click="BuscarButton_Click"></Button>
            </StackPanel>
           
            <!--Nombres-->
            <Label Content="Nombres"/>
            <TextBox x:Name="NombresTextBox" Text="{Binding Nombres}"/>
            <!--Salario-->
            <Label Content="SalarioId"/>
            <TextBox x:Name="SalarioIdTextBox" Text="{Binding SalarioAnual}"/>
            <Button x:Name="GuardarButton" Content="Guardar" Click="GuardarButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>